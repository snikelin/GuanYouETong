


.table-view
  table, tr, td, th
    border 1px solid black
    table-layout fixed
  table
    margin 5px 0
    border-collapse collapse
    width 100%
    background-image url("./background.png")
    background-repeat no-repeat
    background-position center
    th.no
      width 8%
    th.name
      width 45%
      letter-spacing 1em
    th.amount
      width 15%
    th.price
      width 10%
    th.percentage
      width 8%
    th
      height 30px
      text-align: center
    td
      height 23px
      vertical-align middle
      text-align center
    td.name
      text-align left
      padding-left 5px

    td.footer
      height 40px
      padding-left 10px
      text-align left